{
	"$schema": "https://turbo.build/schema.json",
	"remoteCache": {
		"teamSlug": "ducktors",
		"apiUrl": "https://do-trrc.ducktors.dev"
	},
	"dangerouslyDisablePackageManagerCheck": true,
	"globalDependencies": [
		".tool-versions",
		".npmrc",
		"package.json",
		"pnpm-lock.yaml",
		"pnpm-workspace.yaml",
		"tsconfig.json",
		"turbo.json"
	],
	"concurrency": "16",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [
				"dist/**",
				".next/**",
				".next-dev/**",
				".vercel/**",
				".output/**",
				".vinxi/**",
				"out/**",
				".source/**",
				"openapi.json"
			]
		},
		"generate": {
			"cache": false,
			"dependsOn": ["build", "^generate"],
			"outputs": ["openapi.json", "content/**", "migrations", "**/v1.d.ts"]
		},
		"dev": {
			"persistent": true,
			"cache": false
		},
		"lint": {},
		"format": {
			"cache": false
		},
		"test": {}
	}
}
