{
	"permissions": {
		"deny": [
			"Read(**/dist/**)",
			"Read(**/.next/**)",
			"Read(**/.next-dev/**)",
			"Read(**/.content-collections/**)",
			"Read(.conductor/**)",
			"Read(.turbo/**)"
		]
	},
	"hooks": {
		"Stop": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "pnpm format"
					},
					{
						"type": "command",
						"command": "pnpm build"
					}
				]
			}
		]
	}
}
