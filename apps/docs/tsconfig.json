{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"declaration": false,
		"target": "ESNext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"preserveSymlinks": true,
		"allowJs": true,
		"incremental": true,
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"next-env.d.ts",
		"out/types/**/*.ts",
		".next-dev/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
