{
	"name": "docs",
	"version": "0.0.0",
	"private": true,
	"license": "SEE LICENSE IN ../../LICENSE",
	"files": [
		".source",
		".next",
		"out",
		"openapi.json"
	],
	"scripts": {
		"build": "fumadocs-mdx && next build && cp ../gateway/openapi.json . && cp ./openapi.json ./.next/standalone/apps/docs/ && mkdir -p .next/static && cp -r .next/static .next/standalone/apps/docs/.next/ && test -d public && cp -r public .next/standalone/apps/docs/",
		"dev": "next dev --turbo --port 3005",
		"format": "eslint --fix . && prettier --write .",
		"gen-docs": "node scripts/generate-docs.mjs",
		"generate": "pnpm gen-docs",
		"postinstall": "fumadocs-mdx || true",
		"lint": "eslint . && prettier --check .",
		"start": "next start -H 0.0.0.0"
	},
	"dependencies": {
		"class-variance-authority": "^0.7.1",
		"fumadocs-core": "15.8.1",
		"fumadocs-mdx": "12.0.1",
		"fumadocs-openapi": "9.3.13",
		"fumadocs-ui": "15.8.1",
		"gateway": "workspace:*",
		"lucide-react": "^0.544.0",
		"next": "15.5.2",
		"posthog-js": "1.255.1",
		"react": "^19.1.1",
		"react-dom": "^19.1.1",
		"remark": "15.0.1",
		"remark-gfm": "4.0.1",
		"remark-mdx": "3.1.1",
		"shiki": "3.13.0",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.5",
		"@types/mdx": "^2.0.13",
		"@types/react": "^19.1.13",
		"@types/react-dom": "^19.1.9",
		"postcss": "^8.5.6",
		"rimraf": "6.0.1",
		"tailwindcss": "^4.1.12"
	}
}
