		"@hono/zod-validator": "^0.7.0",
		"@llmgateway/db": "workspace:*",
		"@llmgateway/instrumentation": "workspace:*",
		"@llmgateway/logger": "workspace:*",
		"@llmgateway/shared": "workspace:*",
		"@opentelemetry/api": "1.9.0",
		"@opentelemetry/sdk-node": "0.205.0",
		"bcrypt-ts": "7.0.0",
		"better-auth": "1.2.7",
		"drizzle-zod": "0.7.1",
		"gateway": "workspace:*",
		"hono": "^4.9.7",
		"hono-openapi": "^0.4.6",
		"ioredis": "5.7.0",
		"nodemailer": "^7.0.5",
		"openai": "^5.19.1",
		"posthog-node": "5.8.2",
		"stripe": "18.1.1",
		"zod": "3.25.75",
