{
	"name": "gateway",
	"version": "0.0.0",
	"private": true,
	"license": "SEE LICENSE IN ../../LICENSE",
	"type": "module",
	"imports": {
		"@/": {
			"default": "."
		}
	},
	"files": [
		"dist/",
		"openapi.json"
	],
	"scripts": {
		"build": "tsc && resolve-tspaths && pnpm run generate",
		"dev": "concurrently \"tsc-watch --onSuccess 'resolve-tspaths'\" \"nodemon dist/serve.js\"",
		"exec-dev": "resolve-tspaths && node dist/serve.js",
		"format": "eslint --fix . && prettier --write .",
		"generate": "tsx ./src/scripts/generate-openapi.ts",
		"lint": "eslint . && prettier --check .",
		"start": "node --enable-source-maps dist/serve.js"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.0",
		"@hono/swagger-ui": "^0.5.1",
		"@hono/zod-openapi": "^0.19.6",
		"@hono/zod-validator": "^0.7.2",
		"@llmgateway/cache": "workspace:*",
		"@llmgateway/db": "workspace:*",
		"@llmgateway/instrumentation": "workspace:*",
		"@llmgateway/logger": "workspace:*",
		"@llmgateway/models": "workspace:*",
		"@llmgateway/shared": "workspace:*",
		"@opentelemetry/api": "1.9.0",
		"@opentelemetry/sdk-node": "0.205.0",
		"dotenv": "16.5.0",
		"gpt-tokenizer": "3.0.1",
		"hono": "^4.9.7",
		"hono-openapi": "^0.4.6",
		"ioredis": "5.6.1",
		"redis": "5.8.2",
		"worker": "workspace:*",
		"zod": "3.25.75",
		"zod-openapi": "^4.2.4"
	}
}
