{
	"name": "gateway",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"files": [
		"dist/",
		"openapi.json"
	],
	"scripts": {
		"build": "NODE_OPTIONS=\"--max-old-space-size=8192\" tsc && NODE_OPTIONS=\"--max-old-space-size=8192\" tsup && pnpm run generate",
		"dev": "nodemon -e ts,json --exec \"tsx src/serve.ts\"",
		"generate": "NODE_ENV=production NODE_OPTIONS=\"--max-old-space-size=4096\" tsx ./src/scripts/generate-openapi.ts",
		"start": "node dist/serve.js"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.0",
		"@hono/swagger-ui": "^0.5.1",
		"@hono/zod-openapi": "^0.19.6",
		"@hono/zod-validator": "^0.7.0",
		"@llmgateway/db": "workspace:*",
		"@llmgateway/logger": "workspace:*",
		"@llmgateway/models": "workspace:*",
		"gpt-tokenizer": "3.0.1",
		"hono": "^4.7.6",
		"hono-openapi": "^0.4.6",
		"ioredis": "5.6.1",
		"redis": "5.8.2",
		"zod": "3.25.75",
		"zod-openapi": "^4.2.4"
	},
	"devDependencies": {
		"@types/node": "^24.0.3",
		"tsx": "^4.19.3"
	}
}
